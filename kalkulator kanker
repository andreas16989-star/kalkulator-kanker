  <div class="container">
    <h2>Kalkulator Edukasi Risiko Kanker</h2>
    <p style="text-align:center; font-size:14px; color:#555;">‚ö†Ô∏è Bukan diagnosis medis ‚Äì hanya edukasi awam</p>
    
    <label>Usia:</label>
    <input type="number" id="age" placeholder="Masukkan usia">
    
    <label>Merokok?</label>
    <select id="smoke">
      <option value="0">Tidak</option>
      <option value="10">Ya</option>
    </select>
    
    <label>Riwayat keluarga kanker?</label>
    <select id="family">
      <option value="0">Tidak</option>
      <option value="15">Ya</option>
    </select>
    
    <button onclick="calculateRisk()">Hitung Risiko</button>
    
    <div id="result"></div>
  </div>

  <script>
    function calculateRisk() {
      let age = parseInt(document.getElementById("age").value) || 0;
      let smoke = parseInt(document.getElementById("smoke").value);
      let family = parseInt(document.getElementById("family").value);

      let score = 0;
      if (age >= 50) score += 20;
      else if (age >= 30) score += 10;
      score += smoke + family;

      let message = "";
      if (score < 10) message = "Risiko Rendah ‚úÖ";
      else if (score < 25) message = "Risiko Sedang ‚ö†Ô∏è";
      else message = "Risiko Lebih Tinggi üö®";

      document.getElementById("result").innerHTML = message;
    }
  </script>
